{
  "preset": "ts-jest",
  "coverageDirectory": "./coverage",
  "testMatch": [
    "**/?(*.)+(spec|test).[tj]s?(x)"
  ],
  "resetMocks": true,
  "clearMocks": true,
  "setupFiles": [
    "<rootDir>/src/jest.setup.ts"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/dist/",
    "<rootDir>/node_modules/"
  ]
}